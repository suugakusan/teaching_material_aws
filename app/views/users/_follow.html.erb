<% if object.any? %>
  <div>
    <ul class="list-unstyled">
      <% object.each do |follower| %>
        <li>
          <div class="p-sm-2 my-2">
            <div class="row">
              <div class="col-sm-6 offset-sm-3">
                <div class="row justify-content-center">
                  <div class="col-3 border border-primary p-2"  id="content-color">
                    <%= image_tag follower.image.url, class: "image" %>
                  </div>
                  <div class="col-7 border border-primary p-2 rounded" id="content-color">
                    <div class="text-left">
                      <h4><%= link_to follower.name, user_path(follower), class: "text-decoration-none" %></h4>
                      <p>出身地：<%= follower.prefecture_id %></p>
                      <p>校種：<%= follower.school_id %></p>
                      <p>自己紹介：<%= follower.profile %></p>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </li>
      <% end %>
    </ul>
  <div class="pagination">
    <%== pagy_bootstrap_nav(@pagy) %>
  </div>
</div>
<% else %>
  <p id="nopost">まだいません</p>
<% end %>