<div class="text-center">
  <h1><%= @user.name %>さんのお気に入り</h1>
</div>
<% if @favoritings.any? %>
  <ul class="list-unstyled mt-2">
    <% @favoritings.each do |favorite| %>
      <li class="col-sm-6 offset-sm-3">
         <div class="border border-primary p-sm-2 mx-2 p-2 rounded" id="content-color">
          <div class="text-left">
            <p>ユーザー：<%= link_to favorite.user.name, user_path(favorite.user), class: "text-decoration-none" %></p>
            <p>タイトル：<%= favorite.title %>[<%= favorite.subject_id %>]</p>
            <p>内容：<%= favorite.content %></p>
            <p>ファイル：<a href=<%= favorite.file.url %> download> <%= favorite.file_identifier %></a></p>
            <p class="text-muted">posted at <%= favorite.created_at %></p>
          </div>
         <div class="d-flex justify-content-around" id="favorite_<%= favorite.id %>">
            <%= render 'userlikebutton', { favorite: favorite }%>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
  <%== pagy_bootstrap_nav(@pagy) %>
<% else %>
  <p id="nopost">まだお気に入りはありません</p>
<% end %>