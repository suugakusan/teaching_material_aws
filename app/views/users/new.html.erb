<div class="text-center">
  <h1>新規登録</h1>
</div>
 <div class="row">
  <div class="col-sm-6 offset-sm-3">

    <%= form_with(model: @user) do |f| %>
     <%= render 'layouts/error_messages', model: f.object %>
    <div class="bg-secondary p-sm-2 m-3 p-2 rounded">
      <div class="m-3 form">
        <%= f.label :name, '名前' %>
        <%= f.text_field :name, class: 'form-control w-100 form-height', required: true %>
      </div>
      
      <div class="m-3">
        <%= f.label :prefecture_id, '都道府県' %>
        <%= f.select :prefecture_id, User.prefecture_ids.keys, class: 'form-control form-height', required: true%>
      </div>
      
      <div class="m-3">
        <%= f.label :school_id, '校種' %>
        <%= f.select :school_id, User.school_ids.keys, class: 'form-control form-height', required: true%>
      </div>
      
      <div class="m-3">
        <%= f.label :image, 'アイコン画像' %>
        <%= f.file_field :image, class: 'form-control form-height'%>
      </div>
      
      <div class="m-3">
        <%= f.label :profile, '自己紹介' %>
        <%= f.text_area :profile, class: 'form-control w-100 form-profile-height', required: true %>
      </div>

      <div class="m-3">
        <%= f.label :email, 'メールアドレス' %>
        <%= f.email_field :email, class: 'form-control form-height', required: true %>
      </div>

      <div class="m-3">
        <%= f.label :password, 'パスワード' %>
        <%= f.password_field :password, class: 'form-control form-height', required: true %>
      </div>

      <div class="m-3">
        <%= f.label :password_confirmation, 'パスワード(確認)' %>
        <%= f.password_field :password_confirmation, class: 'form-control form-height', required: true%>
      </div>
    </div>
    <div class="text-center">
      <%= f.submit '新規登録', class: 'btn btn-primary w-75 mb-4' %>
    </div>
    <% end %>
    <div class="text-center">
      <%= link_to 'ログイン', login_path, class: 'btn btn-secondary w-75 mb-4' %>
      <%= link_to "ゲストログイン", guest_path, method: :post, class: 'btn btn-success w-75 mb-4' %>
    </div>
   </div>
 </div>