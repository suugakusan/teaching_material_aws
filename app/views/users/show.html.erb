<div class="text-center">
  <h1><%= @user.name %>さんのプロフィール</h1>
  <%= render 'relationships/follow_button', user: @user %>
</div>
<div class="row">
  <div class="col-sm-6 offset-sm-3">
    <div class="row justify-content-center">
      <div class="col-3 border border-primary p-2"  id="content-color">
          <%= image_tag @user.image.url, class: "image" %>
        </div>
        <div class="col-7 border border-primary p-2 rounded" id="content-color">
        <div class="text-left">
          <p>出身地：<%= @user.prefecture_id %></p>
          <p>校種：<%= @user.school_id %></p>
          <p>自己紹介：<%= @user.profile %></p>
        </div>
      </div>
      <div class="text-center">
        <% if current_user == @user %>
          <%= link_to "編集", edit_user_path(@user) , class: 'btn btn-primary w-50 mt-3'%>
        <% end %>
      </div>
    </div>
  </div>
</div>
<div class="text-center mt-5">
  <h1><%= @user.name %>さんの投稿</h1>
</div>
<div class="row">
   <div class="col-sm-6 offset-sm-3">
    <%= render 'posts/index', posts: @posts %>
  </div>
</div>