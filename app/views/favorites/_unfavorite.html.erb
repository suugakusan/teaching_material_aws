<%= form_with(model: current_user.favorites.find_by(post_id: post.id), method: :delete, data: {remote: true}, id: "post-#{post.id}" ) do |f| %>
                      <%= hidden_field_tag :post_id, post.id %>
                      <%= f.submit 'お気に入り解除', class: 'btn btn-danger btn-sm' %>
                      <% end %>
                      
$("#post-<%= @post.id %>").html("<%= j(render 'favorites/favorite',  post: @post) %>");