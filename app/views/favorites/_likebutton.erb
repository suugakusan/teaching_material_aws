<% if current_user.favoriting?(post) %>
  <%= form_with(model: current_user.favorites.find_by(post_id: post.id), method: :delete, data: {remote: true} ) do |f| %>
    <%= hidden_field_tag :post_id, post.id, id: "#{post.id}" %>
    <%= f.submit 'お気に入り解除', class: 'btn btn-danger btn-sm' %>
  <% end %>
<% else %>
  <%= form_with(model: current_user.favorites.build, data: {remote: true} ) do |f| %>
    <%= hidden_field_tag :post_id,  post.id, id: "#{post.id}"  %>
    <%= f.submit 'お気に入り登録', class: 'btn btn-primary btn-sm' %>
  <% end %>
<% end %>