<div class="text-center">
  <h1>編集画面 </h1>
</div>
<div class="row">
  <div class="col-sm-6 offset-sm-3">
    <%= form_with(model: [@post, @comment]) do |f| %>
      <%= render 'layouts/error_messages', model: f.object %>
      <%= f.text_area :comment_content, class: 'form-control', required: true %>
      <%= f.file_field :comment_file, class: 'form-control' %>
      <%= f.hidden_field :file_cache %>
      <%= f.hidden_field :post_id, value: @post.id %>
      <div class="text-center">
        <%= f.submit '更新', class: 'btn btn-primary w-75' %>
      </div>
    <% end %>
    <div class="text-center">
      <%= link_to "キャンセル",:back, class: "btn btn-secondary w-75 m-4", data: { confirm: "更新せずもとの画面に戻りますか？" } %>
    </div>
  </div>
</div>