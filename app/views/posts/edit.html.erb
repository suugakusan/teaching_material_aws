<div class="text-center">
  <h1>編集画面 </h1>
</div>
<div class="row">
  <div class="col-sm-6 offset-sm-3">
    <%= form_with(model: @post) do |f| %>
      <%= render "form", f: f %>
      <div class="text-center">
        <%= f.submit '更新', class: 'btn btn-primary w-75' %>
      </div>
    <% end %>
    <div class="text-center">
      <%= link_to "キャンセル",:back, class: "btn btn-secondary w-75 m-4", data: { confirm: "更新せずもとの画面に戻りますか？" } %>
    </div>
  </div>
</div>