<div class="text-center">
  <h1>投稿詳細画面</h1>
</div>
<div class="row">
  <div class="col-sm-8 offset-sm-2">
    <div class="row justify-content-center">
      <div class="col-3 border border-primary p-2"  id="content-color">
          <%= image_tag @post.user.image.url, class: "image" %>
        </div>
        <div class="col-7 border border-primary p-2 rounded" id="content-color">
        <div class="text-left">
          <p>
            <% unless @post.schooltype == "校種"%>
              校種：<%= @post.schooltype %>
            <% end %>
            <% unless @post.grade == "校種"%>
            　学年：<%= @post.grade %>
            <% end %>
            <% unless @post.subject_id == "教科"%>
            　教科：<%= @post.subject_id %>
            <% end %>
          </p>
          <p>
            <% unless @post.schoolbook == "教科書"%>
            教科書：<%= @post.schoolbook %>
            <% end %>
          </p>
          <p><a href=<%= @post.file.url %> download> <%= @post.file_identifier %></a></p>
          <% if @post.file_identifier.include?(".pdf")  %>
            <object data="<%= @post.file.url %>" type="application/pdf" width="" height=""></object>
          <% end %>
          <p><%= @post.content %></p>
        </div>
      </div>
    </div>
  </div>
</div>