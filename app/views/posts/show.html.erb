<div class="text-center">
  <h1>投稿詳細画面</h1>
</div>
<div class="row">
  <div class="col-sm-8 offset-sm-2">
    <div class="row justify-content-center">
      <div class="col-3 border border-primary p-2 text-center"  id="content-color">
          <p><%= link_to @post.user.name, user_path(@post.user), class: "text-decoration-none" %></p>
          <%= image_tag @post.user.image.url, class: "image" %>
        </div>
        <div class="col-7 border border-primary p-2 rounded" id="content-color">
        <div class="text-left">
          <p>
            <% unless @post.schooltype == "校種"%>
              校種：<%= @post.schooltype %>
            <% end %>
            <% unless @post.grade == "校種"%>
            　学年：<%= @post.grade %>
            <% end %>
            <% unless @post.subject_id == "教科"%>
            　教科：<%= @post.subject_id %>
            <% end %>
          </p>
          <p>
            <% unless @post.schoolbook == "教科書"%>
            教科書：<%= @post.schoolbook %>
            <% end %>
          </p>
          <p><a href=<%= @post.file.url %> download> <%= @post.file_identifier %></a></p>
          <% if @post.file_identifier.include?(".pdf")  %>
            <object data="<%= @post.file.url %>" type="application/pdf" width="" height=""></object>
          <% end %>
          <p><%= @post.content %></p>
        </div>
      </div>
      <% if @comments.any? %>
        <div class="col-8 border border-primary p-2 rounded mt-3" id="content-color">
          <% @comments.each do |comment| %>
            <p><%= link_to comment.user.name, user_path(comment.user), class: "text-decoration-none" %></p>
            <p><%= comment.comment_content %></p>
            <p><a href=<%= comment.comment_file.url %> download> <%= comment.comment_file_identifier %></a></p>
              <% if current_user == comment.user %>
                <%= link_to "削除", post_comment_path(@post, comment), method: :delete, data: { confirm: "コメントを削除しますか?" }, class: 'btn btn-danger btn-sm btnpd'%>
              <% end %>
          <% end %>
        </div>
        <%== pagy_bootstrap_nav(@pagy) %>
      <% end %>
      <div class="col-8 border border-primary p-2 rounded mt-3" id="content-color">
        <h2>コメント</h2>
        <%= form_with(model: [@post, @comment]) do |f| %>
        <%= render 'layouts/error_messages', model: f.object %>
        <%= f.text_area :comment_content, class: 'form-control', required: true %>
        <%= f.file_field :comment_file, class: 'form-control' %>
        <%= f.hidden_field :file_cache %>
        <%= f.hidden_field :post_id, value: @post.id %>
          <div class="text-center">
            <%= f.submit '投稿', class: 'btn btn-primary w-75' %>
          </div>
        <% end %>
    </div>
    <div class="text-center">
      <h2><%= link_to "戻る", :back, class: "btn btn-primary mt-3" %></h2>
    </div>
  </div>
</div>