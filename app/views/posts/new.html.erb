<div class="text-center">
  <h1>投稿画面 </h1>
</div>
 <div class="row text-center">
  <div class="col-sm-6 offset-sm-3">

    <%= form_with(model: @post) do |f| %>
    <div class="bg-secondary p-sm-4 my-4 rounded">
      <div class="mb-3">
        <%= f.label :title, 'タイトル' %>
        <%= f.text_field :title, class: 'form-control' %>
      </div>

      <div class="mb-3">
        <%= f.label :subject_id, '教科' %>
        <%= f.select :subject_id, [['国語', "国語"], ['社会', "社会"], ['数学', "数学"], ['理科', "理科"], ['英語', "英語"], ['音楽', "音楽"], ['保体', "保体"], ['技家', "技術"], ['美術', "美術"]], class: 'form-control' %>
      </div>

      <div class="mb-3">
        <%= f.label :content, '内容' %>
        <%= f.text_area :content, class: 'form-control' %>
      </div>

      <div class="mb-3">
        <%= f.label :file, 'ファイル' %>
        <%= f.file_field :file, class: 'form-control' %>
      </div>
    </div>
      <%= f.submit '投稿', class: 'btn btn-primary w-50' %>
    <% end %>
   </div>
 </div>