<div class="search-form m-2">
  <%= form_with url: subject_search_path, method: :get, local: true do |f| %>
    <h4>&lt;教科の選択><%= f.select :keyword1, Post.subject_ids.keys, value: @keyword1, class: "form-control"%>
    
    
  <%= f.submit "検索",class: "btn btn-primary"%></h4>
  <% end %>
   <div class="form-inline">
     <div>
       <%= form_with url: search_path, method: :get, local: true do |f| %>
       <h4>&lt;検索><%= f.text_field :keyword, value: @keyword, class: "form-control"%>
         <%= f.submit "検索" ,class: "btn btn-primary"%></h4>
       <% end%>
     </div>
    </div>
 </div>
 <div>
